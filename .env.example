# ═══════════════════════════════════════════════════════════════
# AI Disaster Prediction — Environment Configuration
# ═══════════════════════════════════════════════════════════════
# Copy this file to .env and fill in production values.
# All values below are development defaults.
# ═══════════════════════════════════════════════════════════════

# ── Application ──
APP_NAME="AI Disaster Prediction"
APP_VERSION="2.0.0"
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=dev-secret-key-change-in-production

# ── Server ──
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# ── CORS ──
CORS_ALLOW_ALL=true

# ── Database (PostgreSQL) ──
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/disaster_db

# ── Cache (Redis) ──
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300
REDIS_WEATHER_TTL=600
REDIS_PREDICTION_TTL=120

# ── External APIs ──
OPEN_METEO_BASE_URL=https://api.open-meteo.com/v1
USGS_EARTHQUAKE_URL=https://earthquake.usgs.gov/fdsnws/event/1
WEATHER_FETCH_TIMEOUT=30

# ── ML Models ──
MODEL_DIR=models
ENSEMBLE_ALPHA=0.65

# ── Alert Broadcasting ──
SMS_PROVIDER=simulation
# SMS_API_KEY=
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SIREN_API_URL=http://localhost:9090/api/sirens
# VAPID_PRIVATE_KEY=
# VAPID_PUBLIC_KEY=

# ── Monitoring ──
ENABLE_METRICS=true
# SENTRY_DSN=

# ── Frontend (Next.js) ──
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MAPBOX_TOKEN=
